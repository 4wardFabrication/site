%section#quoteform
  .container-fluid
    %form
      %input.form-control{type: 'hidden', name: 'subject', value: 'quote'}
      .row
        .col-sm-4
        .col-sm-4
          .form-group
            %input.form-control{type: 'email', name: 'from', placeholder: 'Your email'}
      .row
        .col-sm-4
        .col-sm-4
          .form-group
            %textarea.form-control{name: 'body', placeholder: 'Your message...'}
      .row
        .col-sm-4
        .col-sm-4
          .form-group
            %button.btn.btn-block.btn-default.btn-lg{type: "button", onClick: "Mailer.send(this.parentNode);"}
              Send

:javascript
  var Mailer = {
    send: function(form) {
      var webmuse_api_url = "{{site.webmuse_api_url}}emailer/ffab_email";
      var subject = form.subject.value;
      var from = form.from.value;
      var body = form.body.value;

      $.ajax({
        type: 'POST',
        url: webmuse_api_url,
        dataType: 'json',
        data: JSON.stringify({
          subject: subject,
          from: from,
          body: body
        })
      });
    }
  };
